<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/ThemeOverlay.App.MaterialAlertDialog"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#A51A49"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="16dp">



    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="AGUARDE"
            android:textAllCaps="true"
            android:textColor="@color/TextColorLight"
            android:textSize="@dimen/TextSizeSmall" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="em processamento ..."
            android:textAllCaps="false"
            android:textColor="@color/TextColorLight"
            android:textSize="@dimen/TextSizeSmaller" />

    <com.google.android.material.textfield.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp"

            android:textColorHint="@color/colorPrimaryDark"
            app:boxBackgroundColor="#550E26"
            app:boxStrokeColor="@color/colorPrimaryDark"

    >

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/InputPhase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins"
                android:textColor="@color/TextColorLight"
                android:gravity="center"
                android:inputType="text"
                android:textSize="10sp" />

    </com.google.android.material.textfield.TextInputLayout>



</LinearLayout>